package com.virtusa.util;

public class CurrencyConversion {

	public double GBPToUSD(Double amount) {

		return (amount * Constants.GBP_TO_USD);
	}

	public double CHFToUSD(Double amount) {

		return (amount * Constants.CHF_TO_USD);
	}

	public double EURToUSD(Double amount) {

		return (amount * Constants.EUR_TO_USD);
	}
	
	public double USDToEUR(Double amount) {

		return Constants.EUR_TO_USD * amount;
	}
	
	

}
