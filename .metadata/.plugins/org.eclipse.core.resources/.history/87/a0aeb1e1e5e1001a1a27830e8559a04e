package com.virtusa.fx;

import static org.junit.Assert.assertEquals;

import org.junit.Test;

import com.virtusa.util.CurrencyConversion;

public class TestLogic {

	@Test
	public void testConversion() {
		
		assertEquals(1.26, new CurrencyConversion().GBPToUSD(1),0);	
		assertEquals(1, new CurrencyConversion().CHFToUSD(1.04),2);
		assertEquals(1, new CurrencyConversion().EURToUSD(1.22),2);
		
	}
}
